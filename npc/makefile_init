verdoc = top
all:
	@echo "Write this Makefile by your self."
.PHINY : sim
sim:
	$(call git_commit, "sim RTL") # DO NOT REMOVE THIS LINE!!!
	@echo "Write this Makefile by your self."
	verilator --cc $(verdoc).sv
	verilator -Wall --trace -cc $(verdoc).sv --exe tb_$(verdoc).cpp
	make -C obj_dir -f V$(verdoc).mk  V$(verdoc)
	./obj_dir/V$(verdoc)
	gtkwave waveform.vcd
include ../Makefile
